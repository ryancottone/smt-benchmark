{
  "compilerOptions": {
      "strict": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "ES6",
      "module": "commonjs",
      "declaration": true,
      "declarationDir": "dist/types",
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["node_modules/@types", "./types"]
  },
  "include": ["src", "types"]
}